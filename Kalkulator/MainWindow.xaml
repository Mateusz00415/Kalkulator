<Window x:Class="Kalkulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kalkulator"
        mc:Ignorable="d"
        Title="Calculator" Height="600" Width="400" MinHeight="480" MinWidth="360" Background="Black">
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="FontSize" Value="28" />
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Background" Value="DarkBlue" />
            <Setter Property="Foreground" Value="Wheat" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8" />
                </Style>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Red" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="Gray" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>

        </Style>
        <Style x:Key="DigitButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="FontSize" Value="28" />
            <Setter Property="FontWeight" Value="Black"></Setter>
            <Setter Property="Background" Value="DarkSlateBlue"/>
            <Setter Property="Foreground" Value= "AntiqueWhite"/>
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8" />
                </Style>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Red" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid
        Width="Auto"
        Height="Auto"
        Margin="25">

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Label
            x:Name="Display"
            FontSize="36"
            Margin="5"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Background="DarkSlateGray"
            Foreground="DarkGoldenrod"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center">
            <Label.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"></Setter>
                </Style>
            </Label.Resources>
            0
        </Label>
        
        <Button 
            Style="{StaticResource ButtonStyle}"
            Click="ClearButton_OnClick"
            Content="C" 
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Grid.Column="0">
        </Button>
        
        <Button 
            Style="{StaticResource ButtonStyle}"
            Click="PercentButton_OnClick"
            Content="%" 
            Grid.Row="1"
            Grid.Column="2">
        </Button>
        
        <Button 
            Style="{StaticResource ButtonStyle}"
            Click="OperatorButton_OnClick"
            Content="/" 
            Grid.Row="1"
            Grid.Column="3">
        </Button>
        
        <Button 
            Style="{StaticResource DigitButtonStyle}"
            Click="NumberButton_OnClick"
            Content="7" 
            Grid.Row="2"
            Grid.Column="0">
        </Button>
        
        <Button 
            Style="{StaticResource DigitButtonStyle}"
            Click="NumberButton_OnClick"
            Content="8" 
            Grid.Row="2"
            Grid.Column="1">
        </Button>
        
        <Button 
            Style="{StaticResource DigitButtonStyle}"
            Click="NumberButton_OnClick"
            Content="9" 
            Grid.Row="2"
            Grid.Column="2">
        </Button>
        
        <Button 
            Style="{StaticResource ButtonStyle}"
            Click="OperatorButton_OnClick"
            Content="*" 
            Grid.Row="2"
            Grid.Column="3">
        </Button>
        
        <Button 
            Style="{StaticResource DigitButtonStyle}"
            Click="NumberButton_OnClick"
            Content="4" 
            Grid.Row="3"
            Grid.Column="0">
        </Button>
        
        <Button 
            Style="{StaticResource DigitButtonStyle}"
            Click="NumberButton_OnClick"
            Content="5" 
            Grid.Row="3"
            Grid.Column="1">
        </Button>
        
        <Button 
            Style="{StaticResource DigitButtonStyle}"
            Click="NumberButton_OnClick"
            Content="6" 
            Grid.Row="3"
            Grid.Column="2">
        </Button>
        
        <Button 
            Style="{StaticResource ButtonStyle}"
            Click="OperatorButton_OnClick"
            Content="-" 
            Grid.Row="3"
            Grid.Column="3">
        </Button>
        
        <Button 
            Style="{StaticResource DigitButtonStyle}"
            Click="NumberButton_OnClick"
            Content="1" 
            Grid.Row="4"
            Grid.Column="0">
        </Button>
        
        <Button 
            Style="{StaticResource DigitButtonStyle}"
            Click="NumberButton_OnClick"
            Content="2" 
            Grid.Row="4"
            Grid.Column="1">
        </Button>
        
        <Button 
            Style="{StaticResource DigitButtonStyle}"
            Click="NumberButton_OnClick"
            Content="3" 
            Grid.Row="4"
            Grid.Column="2">
        </Button>
        
        <Button 
            Style="{StaticResource ButtonStyle}"
            Click="OperatorButton_OnClick"
            Content="+" 
            Grid.Row="4"
            Grid.Column="3">
        </Button>
        
        <Button 
            Style="{StaticResource DigitButtonStyle}"
            Click="NumberButton_OnClick"
            Content="0" 
            Grid.Row="5"
            Grid.Column="0">
        </Button>
        
        <Button 
            Style="{StaticResource ButtonStyle}"
            Click="DotButton_Click"
            Content="," 
            Grid.Row="5"
            Grid.Column="1">
        </Button>
        
        <Button 
            Style="{StaticResource ButtonStyle}"
            Click="OperatorButton_OnClick"
            Content="=" 
            Grid.Row="5"
            Grid.ColumnSpan="2"
            Grid.Column="2">
        </Button>
        
        
        

    </Grid>
</Window>
